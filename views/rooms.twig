{% extends "layout.twig" %}

{% block head %}
<link href="{{ app.request.baseUrl }}/components/colorbrewer/colorbrewer.css" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="page-header">
    <h1>Rooms</h1>
</div>

<form class="form-inline" role="form">
    
    <select class="form-control" id="select-beacon">
        <optgroup label="Beacon">
            {% for beacon in beacons %}
                {% if beacon.active %}
                    <option value="{{ beacon.id }}">{{ beacon.name }}</option>
                {% endif %}
            {% endfor %}
        </optgroup>
    </select>
    <select class="form-control" id="select-power">
        <optgroup label="Broadcasting Power">
            <option value="-20">-20 dBm</option>
            <option value="-12">-12 dBm</option>
            <option value="-4">-4 dBm</option>
        </optgroup>
    </select>
</form>

<div class="row">
    <div class="col-md-12">
        <div id="measurements-floors" class="GnBu">
            <div id="floor-1"></div>
            <div id="floor-2"></div>
        </div>
    </div>
</div>
{%  endblock %}

{%  block footer %}
<script src="{{ app.request.baseUrl }}/js/rooms.js"></script>
{% endblock %}
